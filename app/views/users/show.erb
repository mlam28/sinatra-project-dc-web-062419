</nav>

<h1><%=@user.name%></h1>

<h2>Restaurants:</h2>
<% @user.restaurants.each do |restaurant| %>
<ul>
    <li><a href = "/restaurants/<%=restaurant.id%>"><%=restaurant.name%></a></li>
</ul>
<% end %>

<form action = "/users/add/<%=@user.id%>" method = "get">
<input type="submit" value = "Click here to add restaurants!">
</form>



